<p style="color: green"><%= notice %></p>

<% if @spice.user %>
  <h1><%= @spice.user.name %>'s Spice</h1>
<% end %>

<%= render @spice %>

<div>
  <% if @spice.user %>
    <%= link_to "Edit this spice", edit_spice_path(@spice) %> |
    <%= link_to "Back to spices", user_spices_path(@spice.user) %>
  <% end %>

  <%= button_to "Destroy this spice", @spice, method: :delete %>
</div>
